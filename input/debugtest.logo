@SIZE 5000 5000
@BACKGROUND 250 250 250
@POSITION 2500 1000
COLOR 0 0 0

DEF r 255
DEF g 0
DEF b 0
DEF x 19


FUNC LINE(step)
IF step LESSTHAN 250 THEN
MOVE 50
END IF
IF step LESSTHAN 250 STOP
ADD r -1
ADD g 1
ADD b 1
COLOR r g b
SIZE x
MOVE step
PRO step 0.8
ADD x -3
TURN 30
CALL LINE(step)
TURN -60
CALL LINE(step)
ADD x 3
TURN -150
PRO step 1.25
CLOAK
MOVE step
TURN 180
END FUNC

CALL LINE(700)