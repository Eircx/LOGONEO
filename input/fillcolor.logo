@SIZE 5000 5000
@BACKGROUND 255 255 255
@POSITION 2000 2500

FUNC wow(range,r,g,b)
COLOR
LOOP 360
MOVE range
TURN 1
END LOOP
TURN 90
MOVE 1
FILL r g b
TURN 180
MOVE 1
TURN 90
END FUNC

DEF counter 1
DEF step 6
DEF r 0
DEF g 0
DEF b 255

LOOP 720
CLOAK
PRO step 0.99 
MOVE step
TURN 1
IF counter LESSTHAN 361 THEN
ADD r 0.7
ADD g 0.7
ADD b -0.7
END IF
IF counter MORETHAN 360 THEN
ADD r -0.7
ADD g -0.7
ADD b 0.7
END IF
CALL wow(step,r,g,b)
END LOOP