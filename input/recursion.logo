@SIZE 5000 5000
@BACKGROUND 200 200 255
@POSITION 1300 1300

FUNC snow(step)
IF step LESSTHAN 2 STOP
PRO step 0.3333
MOVE step
TURN -60
CALL snow(step)
TURN 120
CALL snow(step)
TURN -60
MOVE step
END FUNC

CALL snow(3500)
TURN 120
CALL snow(3500)
TURN 120
CALL snow(3500)
TURN 150
CLOAK
MOVE 10
FILL 255 255 255